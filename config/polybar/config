[colors]
;background = ${xrdb:color0:#222}
background = #40000000
background-alt = #60000000
tray-background = #00000000
;foreground = ${xrdb:color7:#222}
foreground = #FFFFFF
foreground-alt = #555
primary = #90009090
secondary = #FF900000
alert = #90900000

[bar/spacer]
width = 100%
height = 20
background = #00000000
foreground = #00000000
override-redirect = false

modules-center = spacer

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 80%
height = 24
offset-x = 10%
offset-y = 0
radius = 6
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

border-size = 4
