[colors]
;background = ${xrdb:color0:#222}
background = #000000
background-alt = #000000
tray-background = #000000
;foreground = ${xrdb:color7:#222}
foreground = #FFFFFF
foreground-alt = #555
primary = #00BCD4
secondary = #900000
alert = #900000

[bar/main]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 30
;offset-x = 10%
;offset-y = 0
radius = 0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

padding-left = 0
padding-right = 0 

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=14;1
font-1 = unifont:fontformat=truetype:size=12:antialias=false;0
font-2 = "Wuncon Siji:pixelsize=16;0"
font-3 = "Font Awesome 5 Free:style=Regular:pixelsize=16;0"
font-6 = "Font Awesome 5 Free:style=Solid:pixelsize=16;0"
font-4 = "Font Awesome 5 Solid:pixelsize=16;0"
font-5 = "Font Awesome 5 Brands:pixelsize=16;0"

modules-left = date mpd
modules-center = i3
modules-right = volume battery 

tray-position = right
tray-padding = 0
;tray-transparent = true
;tray-background = #40000000

wm-restack = i3

override-redirect = true

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize


[module/xwindow]
type = internal/xwindow
label = %title:0:40:...%
format-background = ${colors.background-alt}

[module/spacer]
type = internal/xwindow
label = 
format-background = #00000000

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.background-alt}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
;label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = 4
label-focused-foreground = ${colors.primary}

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 4
label-unfocused-background = ${colors.background-alt}

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = 4

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 4

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>
format-offline = <label-offline>
format-background = ${colors.background-alt}
format-stopped = 

icon-prev = 
icon-stop =  
icon-play =  
icon-pause =  
icon-next =  

label-song-maxlen = 25
label-song-ellipsis = true
label-offline = 

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

format-connected = <label-connected>
label-connected = 
label-connected-foreground = ${colors.foreground]

format-disconnected = <label-disconnected>
label-disconnected = 
label-disconnected-foreground = ${colors.alert}

[module/eth]
type = internal/network
interface = net0
interval = 3.0

format-connected = <label-connected>
label-connected = 
label-connected-foreground = ${colors.foreground}

format-disconnected = <label-disconnected> 
label-disconnected = 
label-disconnected-foreground = ${colors.alert}

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %I.%M
time-alt = %I:%M:%S

;format-prefix = 
;format-prefix-foreground = ${colors.foreground-alt}
;format-underline = #0a6cf5

;format-background = ${colors.background-alt}

label = %date% %time%

[module/volume]
type = internal/pulseaudio

#sink = "alsa_output.platform-skl_n88l25_s4567.HiFi__hw_sklnau8825adi_0__sink"

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%
label-volume-foreground = ${root.foreground}

format-muted-prefix = ""
format-muted-foreground = ${colors.secondary}
label-muted = X

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
;format-charging-underline = #fffabc
label-charging = %percentage%

format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = #ffa0a0
label-discharging = %percentage%

format-full = 
format-full-foreground = ${colors.foreground}
;format-full-underline = #c9ffa0

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/menu]
type = custom/menu

expand-right = true

format-spacing = 1

